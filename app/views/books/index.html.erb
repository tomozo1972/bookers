<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
</table>

<%= @books.each do |list| %>
  <p>Title</p>
  <span><%= list.title %></span>
  <p>Body</p>
  <span><%= list.body %></span>
<% end %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit :'Create Book' %>
<% end %>